<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.profile.user.UserActivity"
    android:background="@color/colorPrimary">

    <com.zj.core.util.TitleBar
        android:id="@+id/userTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.zj.core.view.RoundImageView
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center"
        android:src="@drawable/ic_head"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZhuJiang"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center"
        android:textSize="@dimen/dp_15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="只要开始，永远不晚。只要努力，就有可能"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:textSize="@dimen/dp_14"/>


    <TextView
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:text="下面是我的公众号，想关注就赶快扫码吧！！！"
        android:textColor="@color/yellow"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center"
        android:textSize="@dimen/dp_15"/>

    <com.zj.core.view.RoundImageView
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center"
        android:src="@drawable/we_chart_mark"/>

</LinearLayout>